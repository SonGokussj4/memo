@model memo.ViewModels.BugReportVM

<div class="text-center">
    <p>Logged in user: [@ViewBag.User] and role: [@ViewBag.Role]</p>
</div>

@if (TempData["Success"] != null){
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["Error"] != null){
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="error-alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="col-lg-13 personal-info">
<div class="card">
    <h4>Přidat:</h4>

    <hr />

    <form asp-action="Index" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-lg-12">
                <span class="has-float-label">
                    <input asp-for="BugReport.Subject" class="form-control" placeholder=" " type="text" />
                    <label asp-for="BugReport.Subject"></label>
                </span>
                <span asp-validation-for="BugReport.Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <span class="has-float-label">
                    <textarea asp-for="BugReport.Details" class="form-control" placeholder=" " type="text" ></textarea>
                    <label asp-for="BugReport.Details"></label>
                </span>
                <span asp-validation-for="BugReport.Details" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <span class="has-float-label">
                    <input asp-for="BugReport.Priority" class="form-control" placeholder=" " type="text" />
                    <label asp-for="BugReport.Priority"></label>
                </span>
                <span asp-validation-for="BugReport.Priority" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <span class="has-float-label">
                    <input asp-for="BugReport.Category" class="form-control" placeholder=" " type="text" />
                    <label asp-for="BugReport.Category"></label>
                </span>
                <span asp-validation-for="BugReport.Category" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-md-between">
            <div class="col-lg-auto">
                <a asp-action="Index" class="btn btn-light border"><i class="fa fa-arrow-left"></i> Zpět</a>
            </div>
            <div class="col-lg-auto">
                <input type="submit" class="btn btn-primary" value="Vytvořit" />
            </div>
        </div>    </form>

</div>
</div>

<div class="bug-report">
    <div class="card">
        @foreach (BugReport item in Model.BugReports)
        {
            <div class="card pb-0 pt-3 mb-3">
                <p class="pb-0 mb-0">
                    <a asp-action="Delete" asp-route-id="@item.BugReportId"><i class="fa fa-times fa-fw"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.BugReportId"><i class="fa fa-pencil fa-fw border-right pr-2 mr-2"></i></a>
                    <b>Id:</b> @item.BugReportId
                    <b class="pl-3">Priority:</b> @item.Priority
                    <b class="pl-3">Category:</b> @item.Category
                    <b class="pl-3">Subject:</b> @item.Subject
                </p>

                <hr class="pt-1 mb-1" />

                <p>
                @* <b class="pl-3">Details:</b> @Html.Raw(item.Details?.Replace("\n", "<br/>")) *@
                <b class="pl-3">Details:</b> @Html.Raw(item.Details)
                </p>
                <p>
                <b class="pl-3">Resolved:</b> @item.Resolved
                <b class="pl-3">Created:</b> @item.Created.ToString("yyyy-MM-dd HH:mm")
                <b class="pl-3">User:</b> @item.User
                </p>
            </div>
        }
    </div>
</div>

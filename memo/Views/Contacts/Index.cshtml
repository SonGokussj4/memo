@{
    ViewData["Title"] = "Kontakty";
}

@model IEnumerable<memo.Models.Contact>

<div class="text-center">
    <h1 class="display-4">Kontakty</h1>
</div>

<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Jméno</th>
            <th scope="col">Oddělení</th>
            <th scope="col">Telefon</th>
            <th scope="col">E-mail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <th scope="row"><a href="#"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i></a></th>
                <th scope="row">@contact.PersonName</th>
                <th scope="row">@contact.Department</th>
                <th scope="row">@contact.Phone</th>
                <th scope="row">@contact.Email</th>
            </tr>
        }
    </tbody>
</table>

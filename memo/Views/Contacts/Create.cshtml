@model memo.Models.Contact

@{
    ViewData["Title"] = "Nový kontakt";
}

<div class="text-center">
    <h1 class="display-6">@ViewData["Title"]</h1>
    <hr />
</div>


<div class="container d-flex justify-content-center">
    <div class="col-lg-10 personal-info">
        <form class="card" role="form" autocomplete="on" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
                <label asp-for="PersonTitle" class="col-lg-3 col-form-label form-control-label control-label"></label>
                <div class="col-lg-3">
                    <span class="has-float-label">
                        <input asp-for="PersonTitle" class="form-control" type="text"  placeholder=" "/>
                        <label asp-for="PersonTitle">Titul</label>
                    </span>
                    <span asp-validation-for="PersonTitle" class="text-danger"></span>
                </div>
            </div>

        <div class="form-group row">
            <label asp-for="PersonName" class="required col-lg-3 col-form-label form-control-label control-label">Celé jméno</label>
            <div class="col-lg-3">
                <span class="has-float-label">
                    <input asp-for="PersonName" class="form-control" type="text" placeholder=" "/>
                    <label asp-for="PersonName">Křestní jméno</label>
                </span>
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <span class="has-float-label">
                    <input asp-for="PersonLastName" class="form-control" type="text" placeholder=" "/>
                    <label asp-for="PersonLastName">Příjmení</label>
                </span>
                <span asp-validation-for="PersonLastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CompanyId" class="required col-lg-3 col-form-label form-control-label control-label"></label>
            <div class="col-lg-3">
                <select asp-for="CompanyId" asp-items="@ViewBag.CompanyList" class="form-control selectpicker">
                    <option>-- Vyber firmu --</option>
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <span class="has-float-label">
                    <input asp-for="Department" class="form-control" type="text" placeholder=" "/>
                    <label asp-for="Department">Oddělení</label>
                </span>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
                <label asp-for="Email" class="col-lg-3 col-form-label form-control-label control-label"></label>
                <div class="col-lg-6">
                    <span class="has-float-label">
                        <input asp-for="Email" class="form-control" type="text" placeholder=" "/>
                        <label asp-for="Email">E-mail</label>
                    </span>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Phone" class="col-lg-3 col-form-label form-control-label control-label"></label>
                <div class="col-lg-3">
                    <span class="has-float-label">
                        <input asp-for="Phone" class="form-control" type="text" placeholder=" "/>
                        <label asp-for="Phone">Telefon</label>
                    </span>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

        <div class="form-group row">
            <label asp-for="Notes" class="col-lg-3 col-form-label form-control-label control-label"></label>
            <div class="col-lg-9">
                <span class="has-float-label">
                    <textarea asp-for="Notes" class="form-control" placeholder=" "></textarea>
                    <label asp-for="Phone">Poznámky</label>
                </span>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-3">
                <a asp-action="Index" class="btn btn-light border"><i class="fa fa-arrow-left"></i> Zpět</a>
            </div>
            <div class="col-lg-9">
                <input type="reset" class="btn btn-secondary" value="Vyprázdnit pole" />
                <input type="submit" class="btn btn-primary" value="Vytvořit kontakt" />
            </div>
        </div>

        </form>
    </div>
</div>

@using System.Globalization

@model memo.ViewModels.OfferOrderVM

<div class="mb-4 pt-4" style="border-top: 1px solid #0000000d;">
    <div class="row form-group justify-content-end">

        <input type="hidden" name="Order.Invoices.Index" value="@Model.IDOrder" />

        <input hidden="true" asp-for="Order.Invoices[Model.IDOrder].InvoiceId" />

        <div class="col-lg-3 mycalendar">
            <span class="has-float-label">
                <input asp-for="Order.Invoices[Model.IDOrder].InvoiceIssueDate" class="form-control" type="text" autocomplete="off" data-id="@Model.IDOrder" placeholder=" " />
                <label asp-for="Order.Invoices[Model.IDOrder].InvoiceIssueDate">Termín vystavení</label>
            </span>
            <span asp-validation-for="Order.Invoices[Model.IDOrder].InvoiceIssueDate" class="text-danger"></span>
        </div>

        <div class="col-lg-3 mycalendar">
            <span class="has-float-label">
                <input asp-for="Order.Invoices[Model.IDOrder].InvoiceDueDate" class="form-control" type="text" autocomplete="off" data-id="@Model.IDOrder" placeholder=" " />
                <label asp-for="Order.Invoices[Model.IDOrder].InvoiceDueDate">Splatnost faktury</label>
            </span>
            <span asp-validation-for="Order.Invoices[Model.IDOrder].InvoiceDueDate" class="text-danger"></span>
        </div>

        <div class="col-lg-3">
            <span class="has-float-label">
                <input asp-for="Order.Invoices[Model.IDOrder].Cost" class="form-control" type="text" placeholder=" " />
                <label asp-for="Order.Invoices[Model.IDOrder].Cost">Částka [@Model.Order.SharedInfo.Currency.Name]</label>
            </span>
            <span asp-validation-for="Order.Invoices[Model.IDOrder].Cost" class="text-danger"></span>
        </div>

        <div class="col-lg-1">
            <a href="javascript:void(0)" class="btn btn-danger btn-sm mt-1" data-toggle="tooltip" title="Odstranit záznam" onclick="DeleteInvoice(@Model.Order.Invoices[Model.IDOrder].InvoiceId)"><i class="fa fa-trash"></i></a>
        </div>

    </div>

    <div class="row form-group justify-content-end">
        <div class="col-lg-9">
            <span class="has-float-label">
                <input asp-for="Order.Invoices[Model.IDOrder].DeliveryNote" class="form-control" type="text" placeholder="Cesta k dodacímu listu"/>
                <label asp-for="Order.Invoices[Model.IDOrder].DeliveryNote">Dodací list</label>
            </span>
            <span asp-validation-for="Order.Invoices[Model.IDOrder].DeliveryNote" class="text-danger"></span>
        </div>
        <div class="col-lg-1"></div>
    </div>

</div>

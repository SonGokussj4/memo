    <link rel="stylesheet" href="~/lib/chart.js-2.9.4/package/dist/Chart.min.css">
    <!-- Pure CSS Floating Labels -->
    <link rel="stylesheet" href="~/lib/bootstrap-float-label-master/bootstrap-float-label.css"/>

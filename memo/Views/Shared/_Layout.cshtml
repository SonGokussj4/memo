    <!-- Bootstrap Table -->
    @* <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css"> *@
    <link rel="stylesheet" href="~/lib/bootstrap-table-1.18.0/dist/bootstrap-table.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-table-1.18.0/dist/extensions/filter-control/bootstrap-table-filter-control.min.css">
    <!-- Bootstrap Select -->
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" /> *@
    <link rel="stylesheet" href="~/lib/select2-4.1.0-beta.1/dist/css/select2.min.css" />
    <!-- Pretty CheckBoxes -->
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css"> *@
    <link rel="stylesheet" href="~/lib/pretty-checkbox-master/dist/pretty-checkbox.min.css">
    <!-- Bootstrap -->
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />  <!-- 4.5.1 --> *@
    <link rel="stylesheet" href="~/lib/bootstrap-4.5.3-dist/css/bootstrap.min.css" />  <!-- 4.5.3 -->
    <!-- DataTables -->
    @* <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"> *@

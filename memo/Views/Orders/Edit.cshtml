                    },
                    success: function(data) {
                        window.location = "@Model.Order.OrderId";  // return Orders/Edit/{OrderId}
                    },
                    error: function(data) {
                        //alert(JSON.stringify(data.responseJSON.errorMessage));
                        alert(data.responseJSON.errorMessage);
                    }
                });
            }
        }


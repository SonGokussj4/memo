@{
    ViewData["Title"] = "Nová zakázka";
}

@* @model memo.ViewModels.CreateOfferViewModel *@
@model memo.ViewModels.OfferOrderVM

<style>
    .input-group-text {
        font-size: 0.9rem;
    }
    .input-validation-error {
        border-color: red;
    }
    .cardTitleMerged {
        display: flex;
        justify-content: space-between;
    }
    .input-group-text {
        font-size: 0.9rem;
    }

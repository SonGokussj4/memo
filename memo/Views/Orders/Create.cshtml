                        <div class="input-group-text">@Model.CurrencyName</div>
                    </div>
                    <input asp-for="Order.PriceFinal" class="form-control" type="text" required="" />
                </div>
                <span asp-validation-for="Order.PriceFinal" class="text-danger"></span>
            </div>
            <div class="col-lg-3">

@await Html.PartialAsync("_PartialToastNotification")

<div class="text-center">
    <h1 class="display-6">@ViewData["Title"]</h1>
    <hr />
</div>

<div class="container d-flex justify-content-center">
    <div class="col-lg-8 push-lg-4 personal-info">

        @* @Html.HiddenFor(model => model.ReturnUrl) *@

        <!--------------------------------------------------------------------------------------
            FORM - NABÍDKA
        --------------------------------------------------------------------------------------->
        <form class="card" role="form" autocomplete="on" asp-action="Refresh" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h5 class="card-title">Vyber z možností</h5>
        <hr />

        <div class="d-flex flex-row justify-content-around new-order-radios">
            <label class="radio-inline selected">
                <input type="radio" name="optradio" value="opt1" id="opt1" checked /> Evektor nabídka
            </label>
            <label class="radio-inline">
                <input type="radio" name="optradio" value="opt2" id="opt2" /> Rámcová smlouva
            </label>
            <label class="radio-inline" data-toggle="tooltip" title="Nemám nabídku">
                <input type="radio" name="optradio" value="opt3" id="opt3" /> Zakázka bez nabídky
            </label>
        </div>

        <div class="form-group row justify-content-center mt-3">

            @* Evektor nabídka *@
            <div class="col-lg-7 new-order-from-offer">
                <input type="hidden" asp-for="Order.OrderId" />
                <select asp-for="OfferId" asp-items="ViewBag.WonOffersList" class="form-control selectpicker" onchange="this.form.submit();">
                    <option select="">-- Vyber nabídku --</option>
                </select>
                <span asp-validation-for="Order.OfferId" class="text-danger"></span>
            </div>

            @* Rámcová smlouva *@
            <div class="col-lg-7 new-order-from-contract" style="display: none;">
                <input type="hidden" asp-for="Order.ContractId" />
                <select asp-for="ContractId" asp-items="Model.ContractsList" class="form-control selectpicker" onchange="this.form.submit();">
                    <option select="">-- Vyber rámcovou smlouvu --</option>
                </select>
                <span asp-validation-for="Order.ContractId" class="text-danger"></span>
            </div>

            @* Zakázka bez nabídky *@
            <div class="col-lg-12 new-order-from-other" style="display: none;">

                <div class="form-group row">
                    <label asp-for="Order.SharedInfo.ReceiveDate" class="col-lg-3 col-form-label form-control-label control-label">Datum přijetí</label>
                    <div class="col-lg-9 mycalendar">
                        <span class="has-float-label">
                            <input asp-for="Order.SharedInfo.ReceiveDate" class="form-control" type="text" placeholder=" " required="" autocomplete="off"/>
                            <label asp-for="Order.SharedInfo.ReceiveDate"></label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.ReceiveDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Order.SharedInfo.Subject" class="required col-lg-3 col-form-label form-control-label control-label">Předmět</label>
                    <div class="col-lg-9">
                        <span class="has-float-label">
                            <input asp-for="Order.SharedInfo.Subject" class="form-control" placeholder="Krátký popis nabídky" type="text" />
                            <label asp-for="Order.SharedInfo.Subject"></label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.Subject" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row eveOffer">
                    <label class="required col-lg-3 col-form-label form-control-label control-label">Evektor</label>
                    <div class="col-lg-2">
                        <span class="has-float-label">
                            <select class="form-control" asp-for="Order.SharedInfo.EveDivision" asp-items="Model.EveDivisionList"></select>
                            <label asp-for="Order.SharedInfo.EveDivision">Divize</label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.EveDivision" class="text-danger"></span>
                    </div>
                    <div class="col-lg-3">
                        <span class="has-float-label">
                            <select asp-for="Order.SharedInfo.EveDepartment" asp-items="Model.DepartmentList" class="form-control"></select>
                            <label asp-for="Order.SharedInfo.EveDepartment">Oddělení</label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.EveDepartment" class="text-danger"></span>
                    </div>
                    <div class="col-lg-4">
                        <select class="form-control selectpicker" asp-for="Order.SharedInfo.EveCreatedUser" asp-items="Model.EveContactList" required>
                            @* <option value="">-- Vyber uživatele --</option> *@
                        </select>
                        <span asp-validation-for="Order.SharedInfo.EveCreatedUser" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row customerOffer">
                    <label class="required col-lg-3 col-form-label form-control-label control-label">Zákazník</label>
                    <div class="col-lg-4">
                        <select class="form-control selectpicker" asp-for="Order.SharedInfo.CompanyId" asp-items="@Model.CompanyList">
                            <option value="">-- Vyber firmu --</option>
                        </select>
                        <span asp-validation-for="Order.SharedInfo.CompanyId" class="text-danger"></span>
                    </div>
                    <div class="col-lg-1" data-toggle="tooltip" title="Nová firma">
                        <a asp-action="create" asp-controller="Companies" target="_blank">
                            <i class="form-control fa fa-plus-circle" style="color: green; cursor: pointer;"></i>
                        </a>
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control selectpicker" asp-for="Order.SharedInfo.ContactId" asp-items="@Model.ContactList">
                            <option value="">-- Vyber kontakt --</option>
                        </select>
                        <span asp-validation-for="Order.SharedInfo.ContactId" class="text-danger"></span>
                    </div>
                    <div class="col-lg-1" data-toggle="tooltip" title="Nový kontakt">
                        <a asp-action="create" asp-controller="Contacts" target="_blank">
                            <i class="form-control fa fa-plus-circle" style="color: green; cursor: pointer;"></i>
                        </a>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Order.SharedInfo.Price" class="col-lg-3 col-form-label form-control-label control-label"></label>
                    <div class="col-lg-5">
                        <span class="has-float-label">
                            <input asp-for="Order.SharedInfo.Price" class="form-control" type="text" placeholder=" "/>
                            <label asp-for="Order.SharedInfo.Price">Cena bez DPH</label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.Price" class="text-danger"></span>
                    </div>
                    <div class="col-lg-4">
                        <span class="has-float-label" data-toggle="tooltip" title="Aktuální kurz ČNB">
                            <select asp-for="Order.SharedInfo.CurrencyId" asp-items="Model.CurrencyList" class="form-control"></select>
                            <label asp-for="Order.SharedInfo.CurrencyId">Měna</label>
                        </span>
                        <span asp-validation-for="Order.SharedInfo.CurrencyId" class="text-danger"></span>
                    </div>
                </div>




            </div>

        </div>


        @if (@Model.Offer?.OfferId != 0 && @Model.Offer?.OfferId != null)
        {
            <ul>
                <li><b>Předmět:</b> @Model.Offer?.Subject - <b>@String.Format(CultureInfo.CreateSpecificCulture(Model.Offer?.Currency.CultureCode), "{0:C0}", @Model.Offer?.Price)</b> (@String.Format(CultureInfo.CreateSpecificCulture("cs-CZ"), "{0:C0}", Model.Offer?.PriceCzk))</li>
                <li><b>Zákazník:</b> @Model.OfferCompanyName (<b>Splatnost faktury:</b> @Model.InvoiceDueDays dní)</li>
                <li>
                    <b>Přijetí poptávky:</b> @String.Format("{0:dd.MM.yyyy}", @Model.Offer.ReceiveDate) /
                    <b>Odeslání nabídky:</b> @String.Format("{0:dd.MM.yyyy}", @Model.Offer.SentDate) /
                    <b><label asp-for="Offer.EstimatedFinishDate"></label>:</b> @String.Format("{0:dd.MM.yyyy}", @Model.Offer.EstimatedFinishDate)
                </li>
            </ul>
        }

        <div class="cardTitleMerged">
            <div class="">
                <a asp-action="Index" class="btn btn-light border"><i class="fa fa-arrow-left"></i> Zpět</a>
            </div>

            @if (@Model.Offer?.OfferId != 0 && @Model.Offer?.OfferId != null)
            {
                <div class="">
                    <a asp-action="Edit" asp-controller="Offers" asp-route-id="@Model.Offer.OfferId" class="btn btn-primary"><i class="fa fa-list-alt"></i> Přejít na nabídku</a>
                </div>
            }
        </div>

        </form>

        <br />

        <!--------------------------------------------------------------------------------------
            FORM - ZAKAZKA
        --------------------------------------------------------------------------------------->
        <form id="orderForm" class="card" role="form" autocomplete="on" asp-action="Create" method="post" style="visibility: hidden;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OfferId" />
        <input type="hidden" asp-for="Order.OfferId" />

        <h5 class="card-title">Vyplnit novou zakázku</h5>
        <hr />

        <div class="form-group row">
            <label asp-for="Order.OrderName" class="required col-lg-3 col-form-label form-control-label control-label"></label>
            <div class="col-lg-9">
                <div class="input-group mb-2 mr-sm-2">
                    <span class="has-float-label">
                        <input asp-for="Order.OrderName" class="form-control" type="text" required="" placeholder=" "/>
                        <label asp-for="Order.OrderName">Číslo objednávky zákazníka</label>
                    </span>
                    <div class="input-group-append">
                        <div class="input-group-text" data-toggle="tooltip" title="Vložit název Evektor nabídky" onclick="insertEvektorOfferName('@Model.Offer.OfferName');" style="cursor: pointer;">
                            <i class="fa fa-caret-left">&nbsp;<i class="fa fa-tasks"></i></i>
                        </div>
                    </div>
                </div>
            </div>
            <span asp-validation-for="Order.OrderName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label class="required col-lg-3 col-form-label form-control-label control-label">Cena dle jednacího protokolu</label>
            <div class="col-lg-3">
                <span class="has-float-label">
                    <input asp-for="Order.NegotiatedPrice" class="form-control" type="text" required placeholder=" "/>
                    <label asp-for="Order.NegotiatedPrice">Vyjednaná cena [@Model.CurrencyName]</label>
                </span>
                <span asp-validation-for="Order.NegotiatedPrice" class="text-danger"></span>
            </div>
            <div class="col-lg-3">
                <span class="has-float-label">
                    <input asp-for="Order.PriceDiscount" class="form-control" type="text" placeholder=" "/>
                    <label asp-for="Order.PriceDiscount">Sleva z nabídky [@Model.CurrencyName]</label>
                </span>
                <span asp-validation-for="Order.PriceDiscount" class="text-danger"></span>
            </div>
            @if (@Model.Offer?.OfferId != 0 && @Model.Offer?.OfferId != null)
            {
            <div class="col-lg-3">
                <p class="mt-1">Cena nab: <b>@String.Format(CultureInfo.CreateSpecificCulture(Model.Offer?.Currency.CultureCode), "{0:C0}", @Model.Offer?.Price)</b></p>
            </div>
            }
        </div>

        <div class="form-group row">
            <label asp-for="Order.EveContactName" class="required col-lg-3 col-form-label form-control-label control-label"></label>
            <div class="col-lg-9">
                <select asp-for="Order.EveContactName" asp-items="ViewBag.EveContactList" class="form-control selectpicker">
                    <option value="">-- Vyber kontakt --</option>
                </select>
                <span asp-validation-for="Order.EveContactName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <div class="col-lg-4">
                <a href="@Url.Action("CreateEveProject")" target="_blank" class="btn btn-outline-success form-control"
                    data-toggle="tooltip" data-placement="top" title="Nová EVE zakázka">
                    <i class="fa fa-plus-square"></i> Vytvořit eve zakázku
                </a>
            </div>
            <div class="col-lg-4">
                <a href="@Url.Action("CreateEveProject")" target="_blank" class="btn btn-outline-success form-control"
                data-toggle="tooltip" data-placement="top" title="Nová EVE modulová zakázka">
                    <i class="fa fa-plus-square"> </i> Vytvořit eve [M] zakázku
                </a>
            </div>
        </div>

        <div class="form-group row border-top pt-2">
            <div class="col-lg-2 col-form-label d-flex justify-content-left">
                <label class="form-control-label control-label">Kód(y) vykazování</label>
            </div>
            <div class="col-lg-10">
                <a href="javascript:void(0)" class="btn btn-success col-lg-3 add-row-order-codes mt-1" data-toggle="tooltip" title="Přidat hodinové sazby">
                    <i class="fa fa-plus"></i> Přidat kód
                </a>
            </div>
        </div>

        <div class="dynamic-rows-order-codes" id="template-order-codes" data-order="@Model.Order.OrderCodes.Count()">
            <div id="modal-placeholder"></div>
        </div>

        <div class="form-group row border-top pt-2">
            <div class="col-lg-2 col-form-label d-flex justify-content-left">
                <label class="form-control-label control-label">Faktury</label>
            </div>
            <div class="col-lg-10">
                <a href="javascript:void(0)" class="btn btn-success col-lg-3 add-row-invoice mt-1" data-toggle="tooltip" title="Přidat fakturaci"><i class="fa fa-plus"></i> Přidat fakturaci</a>
            </div>
        </div>

        @Html.ValidationMessage("InvoiceMissing", "", new { @class = "text-danger" })
